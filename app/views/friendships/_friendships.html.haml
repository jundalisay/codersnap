.panel.panel-default
  .panel-heading
    = link_to friend do
      = content_tag :h3, friend.username, class: "panel-title"
  .panel-body
    .container
      .row
        = render 'users/user_sm', friend: friend
      .row
        .btn-group.pull-right
          = link_to "Message", new_message_path(recipient: friend.username), class: "btn btn-primary"
          = link_to "Unfriend", friendship_path(friend), method: :delete, class: 'btn btn-danger'

