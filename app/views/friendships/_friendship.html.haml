.panel.panel-default
  .panel-heading
    = link_to friend do
      = content_tag :h3, friend.username, class: "panel-title"
  .panel-body
    .container
      .row
        = render 'layouts/user_sm', user: friend
      .row
        .btn-group.pull-right
          = link_to "Message", new_message_path(recipient: friend.username), class: "btn btn-primary"
          = link_to "Unlink", "#unfriend_modal_#{friend.id}", type: 'button', class: 'btn btn-danger', data: {toggle: 'modal'}

.modal.fade{id: "unfriend_modal_#{friend.id}", role: 'dialog', aria: {hidden: true}}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: "modal"}, aria: {hidden: true}} &times;
        = content_tag :h4, "Disconnect from #{friend.username}", class: 'modal-title'
      .modal-body
        = content_tag :p, "Are you sure you would like to remove #{friend.username} from your network?"
      .modal-footer
        = link_to "Unlink", friendship_path(friend), method: :delete, class: "btn btn-primary"
        %button.btn.btn-default{data: {dismiss: "modal"}} Cancel
