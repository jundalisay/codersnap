.panel.panel-default
  .panel-heading
    = link_to friend do
      = content_tag :h3, friend.username, class: "panel-title"
  .panel-body
    .container
      .row
        = render 'users/user_sm', friend: friend
      .row
        .btn-group.pull-right
          = link_to "Message", new_message_path(recipient: friend.username), class: "btn btn-primary"
          = link_to 'Cancel Request', friendship_path(friend), method: :delete, class: 'btn btn-danger'
          /= link_to "Unfriend", friendship_path(friend), method: :delete, class: 'btn btn-danger'

.modal.fade{id: "cancel_modal_#{friend.id}", role: 'dialog', aria: {hidden: true}}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: "modal"}, aria: {hidden: true}} &times;
        = content_tag :h4, "Cancel request to #{friend.username}", class: 'modal-title'
      .modal-body
        = content_tag :p, "Are you sure you would like to cancel your network request to #{friend.username}?"
      .modal-footer
        = link_to "Cancel Request", friendship_path(friend), method: :delete, class: "btn btn-primary"
        %button.btn.btn-default{data: {dismiss: "modal"}} Maintain Request
