%h1 New Message

.container
	.col-md-6
		%h3
			Register User
			
		= simple_form_for @message do |f|
			= f.input :username, class: "form-control"
			= f.input :email, class: "form-control"
			= f.input :password, class: "form-control"
			= f.file_field :avatar
			= f.submit

		.additional-links
			By signing up you agree to
			%a{:href => "#"} Terms of Use
			and
			%a{:href => "#"} Privacy 
